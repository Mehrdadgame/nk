{
  "compilerOptions": {
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "target": "ES5",
    "strict": false,
    "outFile": "build/index.js",
  },
  "files": [
    "./node_modules/nakama-runtime/index.d.ts",
    "./main.ts",
    "./test.ts",
    "./messages.ts",
    "./match_handler.ts",
    "./daily_reward.ts",
    "./checkturn.ts"
  ],
 
  "typeRoots": [
    "./node_modules"
  ],
  
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
